        ul
          li(class="fragment") Your school career center
          li(class="fragment") Indeed.com
          li(class="fragment") Monster.com
          li(class="fragment") Dice.com
          li(class="fragment") Angellist.com
          li(class="fragment") Recruiting companies
          li(class="fragment") Meetups and Networking
