        h3 Widget Zeitgeist Incorporated
        ol
          li(class="fragment") Stable
          li(class="fragment") "Red Tape"
          li(class="fragment") HR
          li(class="fragment") Entry Level
      section
        h3 Bob, Jane, and Joe's Code Shoppe
        ol
          li(class="fragment") Energetic
          li(class="fragment") Looser
          li(class="fragment") Hard to gain entry
          li(class="fragment") Unstable
      section
